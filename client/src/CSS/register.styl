.blog__reg 
    display flex 
    height 100%
    width 100%
    justify-content center 
    align-items center
    flex-wrap wrap

.blog__login 
    flex 40%
    display flex 
    justify-content center 
    align-items center 
    flex-wrap wrap 
    width 100%
    padding 20px 
    background #f4f4f4
    color #222
    h1, p, button
        flex 100%
.blog__img 
    width 100% 
    height 100%
    position absolute
    top 0 
    bottom 0 
    left 0 
    right 0 
    z-index -999
    filter blur(80px)
.reg__box 
    flex 60%
    display flex 
    justify-content center 
    align-items center 
    padding 20px 
    background darken(#004BA8, 50%)
    min-height 100vh
    padding-top 70px
.reg__header h1
    color #DDD
.reg__error 
    color lighten(#FF0001, 20%)
.input-label 
    color #DDD

.reg__form 
    width 100%
    color #DDD

@media screen and (max-width 968px)
    .form__btn , button
        width 100%
 