.navbar 
    color #DDD
    height 100px
    display flex 
    flex-wrap: wrap
    align-items center
    justify-content center
    font-family "Caviar-Dreams"
    position relative
    left 0 
    right 0
    z-index 999
    background #222

.navbar__collapse 
    display block 
    position absolute
    top 20%
    right 10px
    border-radius 5px
    z-index: 9
    &:hover 
        background lighten(#004BA8, 10%)   
        cursor pointer 
    > span:nth-child(2)
        width 20px
    > span:nth-child(3)
        width 30px
    > span 
        display block
        height 5px 
        width 40px
        margin 10px
        background #EEE
.navbar__wrapper 
    position fixed 
    top 0 
    bottom 0 
    left 0 
    right 0 
    background darken(#004BA8, 50%)
    display flex 
    justify-content center 
    align-items center
    flex-wrap wrap
    transform translateX(-2000px)
    opacity 0
    transition ease-in .5s 

.navbar__wrapper.navbar__active 
    transform translateX(0)
    transition ease-in .5s 
    opacity 1

.navbar__nav
    width 100%
    > a  
        display block
        margin-bottom auto
        text-align: center
        font-size 2rem
        padding 10px
        color #DDD
        &:hover
            background #DDD
            color #222
            
.navbar__header 
    font-size 0.75rem 
    padding-left 10px
    margin-right auto
    > h1
        color #DDD
        padding-top 10px
        font-weight bolder

.navbar__footer 
    position absolute 
    bottom 0 
    left 0 
    right 0
    width 100% 
    text-align center
    z-index 999
    color #DDD
    font-family: "Source-Sans", Arial, Helvetica, sans-serif
    display none 
    opacity 0
    transition opacity .5s ease-in

.navbar__footer.navbar__active  
    opacity 1
    display block
    transition opacity .5s ease-in


