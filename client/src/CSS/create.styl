.editor 
    width 100% 
    min-height 100vh
    height 100%
    display flex 
    justify-content center 
    align-items center
    flex-wrap wrap
.editor__container 
    width 70%
    display flex 
    justify-content center 
    flex-wrap wrap

.editor__title 
    flex 100%
    margin 10px
.editor__commands
    flex 80% 
    display flex
    background #222
    flex-wrap wrap
    padding 10px
    justify-content center
    > span 

        padding 10px
        font-size 0.75rem
        color #DDD
        margin-left 10px
        cursor pointer
        font-style italic
        &:hover, &:focus &:active
            background darken(#DDD, 20%)
.editor__main
   flex 100%
   height 100%
   min-height 200px
   padding 20px
   background #f4f4f4

.editor__commands-right
    margin-left auto
    display flex 
    align-items center
    justify-content center

.style-btn  
    padding 10px
    font-size 0.75rem
    color #DDD
    margin-left 10px
    cursor pointer
    font-style italic
    &:hover, &:focus &:active
        background darken(#DDD, 20%)
        
.input__title 
    font-size 2rem 
    border none
    width 100%
    padding 10px 
    &:focus 
        border none
        outline none


.editor__btn 
    flex 100%
    display flex 
    justify-content center
    margin-left auto
    > button
        margin-top 30px
        width 30%

.private__checked
    font-size 2rem
    padding 10px

@media screen and (max-width 968px)
    .editor__container 
        width 100%
    .editor__commands-right 
        flex 100%